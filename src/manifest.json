{
  "manifest_version": 2,
  "name": "Hey Ladies",
  "version": "0.1.2",

  "description": "Replaces all instances of guy and guys with the more gender neutral 'ladies' or 'lady'.",
  "icons": {},

  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hey-ladies.js", "index.js"]
    }
  ],
  "browser_action": {
    "default_title": "Hey Ladies",
    "default_popup": "popup.html"
  }
}
